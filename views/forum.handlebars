<div class="col-md-9">
<div class="col-md-12">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <form id="post-forum">
        <div class="form-group">
          <label for="title">Title:</label>
          <input placeholder="Post Title" type="text" class="form-control" id="title" maxlength="99">
          <br/>
          <label for="body">Body:</label>
          <textarea placeholder="Post Body" class="form-control" rows="6" id="body"></textarea>
          <br/>
          <button type="submit" class="btn btn-success submit" id="forum-submit">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>
<div class="border-top col-md-12">
  <div class="row border-danger">
    <div class="col-md-8 offset-md-2 forum-posts">
      <div class="forum-area">
        {{#each posts}}
          <div class="card mt-3 forum-card">
            <div class="card-header">
              {{title}}
              <a href="#" class="btn btn-sm float-right delete-post" data-user="{{UserId}}" data-post="{{id}}">X</a>
            </div>
            <div class="card-body">
              <blockquote class="blockquote mb-0">
                <p>
                  {{post}}
                </p>
                <footer class="blockquote-footer">
                  {{User.first_name}} @ <span class="created-at" data-created="{{createdAt}}"></span>
                </footer>
              </blockquote>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
</div>